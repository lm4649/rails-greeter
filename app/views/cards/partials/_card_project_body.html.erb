<!-- 'templates/' + card.template -->
<% if card.template.blank? %>
  <div class="card-project" style= "background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= image_url('cardproject.jpg') %>);">
  <% else %>
    <div class="card-project" style= "background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url(<%= image_url('templates/' + card.template)%>);">
    <% end %>
    <!-- polaroids on the left side -->
    <div class="card-left" style="transform: rotateZ(-8deg);">
      <% (0...4).each do |i| %>
        <% contribution = @curated_contributions[i] %>
        <% if contribution %>
          <%=render 'cards/partials/contributions_column', contribution: contribution %>
        <% end %>
      <% end %>
    </div>
    <div class="card-center">
      <h3><%= card.title %></h3>
      <% if card.photo.attached? %>
        <%= cl_image_tag card.photo.key, height: 200, width: 400, crop: :fill %>
      <% end %>
    </div>
    <!-- polaroids on the right side -->
    <div class="card-right" style="transform: rotateZ(3deg);">
      <% (4...8).each do |i| %>
        <% contribution = @curated_contributions[i] %>
        <% if contribution %>
          <%=render 'cards/partials/contributions_column', contribution: contribution %>
        <% end %>
      <% end %>
    </div>
    <!-- upload the main picture in the middle of the card -->
    <% unless card.photo.attached? %>
      <%=render 'cards/partials/card_upload_main_picture'%>
    <% end %>
  </div>
  <div class="turn-pages d-flex justify-content-between">
    <%= link_to card_path(@card) do  %>
      <i class="fas fa-arrow-circle-left"></i>
    <% end %>
    <%= link_to card_path(@card) do  %>
      <i class="fas fa-arrow-circle-right"></i>
    <% end %>
  </div>