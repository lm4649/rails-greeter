<div class="template-container">
  <div class="glide" style="width:200px;">
    <div class="glide__track templates" data-glide-el="track">
      <ul class="glide__slides">
        <% Card::TEMPLATES.each do |template|  %>
          <li class="glide__slide">
            <%= image_tag "templates/#{template}", alt: "alttext", width: "200px", class: "template", data: {name: template} %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class = "d-flex justify-content-center" data-glide-el="controls">
      <button class="btn btn-sm btn-primary mx-1" data-glide-dir="<">prev</button>
      <button class="btn btn-sm btn-primary mx-1" data-glide-dir=">">next</button>
    </div>
  </div>
  <div class="chosen-template">
    <%= image_tag "templates/#{Card::TEMPLATES.last}", alt: "alttext", width: "500px", id: "chosen-image"%>
    <p id="card-title-preview">choose your title</p>
    <!-- upload the main picture in the middle of the card -->
    <%= f.input :photo, input_html: { class: 'd-none', id: 'upload-photo' }, label_html: { class: 'upload-photo'}, label: ('<i class="fas fa-camera"></i>').html_safe%>
    <div class="d-flex justify-content-end">
      <%= f.button :submit, "Next", class: "btn-primary mt-2 btn-lg" %>
    </div>
  </div>
</div>