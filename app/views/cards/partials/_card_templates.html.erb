<div class="template-container">
  <div class="templates">
    <% Card::TEMPLATES.each do |template|  %>
      <%= image_tag "templates/#{template}", alt: "alttext", width: "200px", class: "template", data: {name: template} %>
    <% end %>
  </div>
  <div class="chosen-template">
    <%= image_tag "templates/#{Card::TEMPLATES.last}", alt: "alttext", width: "500px", id: "chosen-image"%>
    <p id="card-title-preview">choose your title</p>
    <!-- upload the main picture in the middle of the card -->
    <% unless @card.photo.attached? %>
      <%=render 'cards/partials/card_upload_main_picture'%>
    <% end %>
    <div class="d-flex justify-content-end">
      <%= f.button :submit, "Next", class: "btn-primary mt-2 btn-lg" %>
    </div>
  </div>
</div>