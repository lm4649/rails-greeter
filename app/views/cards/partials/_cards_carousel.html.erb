<div class="glide" id="glide-anchor">
  <!-- glide.js controller -->
  <div class="glide__arrows" data-glide-el="controls">
    <button class="glide__arrow glide__arrow--left text-primary" data-glide-dir="<"><i class="fas fa-arrow-circle-left"></i></button>
    <button class="glide__arrow glide__arrow--right text-primary" data-glide-dir=">"><i class="fas fa-arrow-circle-right"></i></button>
  </div>
  <!-- glide.js carousel -->
  <div class="glide__track" data-glide-el="track">
    <ul class="glide__slides">
      <% @contributions.each do |contribution| %>
        <li class="glide__slide">
          <!-- contribution cards -->
          <div class="contribution-card">
            <p><%= contribution.content %></p>
            <div class="contribution-card-footer">
              <p><strong> from <%= contribution.contributor_name %></strong></p>
              <% if contribution.rejected? %>
                <p>rejected</p>
              <% else %>
                <!-- ability to reject a contribution -->
                <%= link_to contribution_path(contribution, rejected: true), method: 'PATCH', remote: true,  class: "btn btn-sm btn-outline-primary d-flex align-items-center" do %>
                  <i class="fas fa-ban"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>