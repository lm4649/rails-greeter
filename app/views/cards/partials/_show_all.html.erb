<div class="container bg-success" >
  <h2>List of contributions</h2>
  <br>
  <ul>
    <% @external_contributions.each do |contribution| %>
      <li>
        <div class="contribution-card">
          <p><%= contribution.content %></p>
          <div class="contribution-card-footer">
            <p><strong> from <%= contribution.contributor_name %></strong></p>
            <% if contribution.rejected? %>
              <p>rejected</p>
            <% else %>
              <%= link_to "reject", contribution_path(contribution, rejected: true), method: 'PATCH', class: "btn btn-sm btn-warning" %>
            <% end %>
          </div>
        </div>
      </li>
      <hr>
    <% end %>
  </ul>
</div>