<!-- only the card manager can do it once -->
<%if user_signed_in? && current_user == @card.user %>
  <div class="upload-container text-center">
    <%= simple_form_for @card do |f| %>
      <%= f.input :photo, input_html: { class: 'd-none', id: 'upload-photo' }, label_html: { class: 'upload-photo'}, label: ('<i class="fas fa-arrow-circle-up"></i>').html_safe%>
      <%= f.button :submit, "upload picture", class: 'btn btn-sm btn-ouline-primary d-none', id:'upload-btn' %>
    <% end %>
  </div>
<% end %>