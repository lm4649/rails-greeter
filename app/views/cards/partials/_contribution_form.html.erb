<div class="container mb-3 p-3 d-flex justify-content-center">
  <div class= "bg-light shadow p-2" style= "width:50%">
    <%= simple_form_for([@card, @contribution], remote: true) do |f| %>
      <!-- fake polaroid  -->
      <div class="rounded mb-2 d-flex justify-content-center align-items-center" style="background-color: rgba(0,0,0,0.8); height:50vh">
        <h5 class="text-light text-center">
          <%=@card.description%>
        </h4>
      </div>
      <%= f.input :content, as: :text, label: 'Write a nice message', placeholder: "Dear #{@card.recipient}" %>
      <%= f.input :contributor_name, label: 'Your name please' %>
      <%= f.input :photo, as: :file %>
      <%if user_signed_in? && current_user == @card.user %>
        <%= f.button :submit, class: 'btn-success btn-block'%>
      <% else %>
        <%= f.input :contributor_email, label: 'Do you wanna receive the final card?', placeholder: 'Enter your email'%>
        <%= f.button :submit, "Send your contribution", class: 'btn-success btn-block', id:'sweet-alert-contribution'%>
      <% end %>
    <% end %>
  </div>
</div>