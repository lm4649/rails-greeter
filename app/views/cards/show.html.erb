<!-- main info about the card -->
<!-- manager, title, date, description -->
<!-- <p>card created by <%= @card.user.email %></p>-->
<div class="container">
  <div class="d-flex justify-content-center">
    <h1><%= @card.title %></h1>
    <% if user_signed_in? && current_user == @card.user %>
      <%= link_to edit_card_path(@card), class: 'btn btn-sm btn-succes align-items-center' do %>
        <i class="far fa-edit"></i>
      <% end %>
    <% end %>
  </div>
  <p class= "text-center"><%= @card.event_date%></p>
  <p class ="text-center"><%= @card.description %></p>
  <br>
  <hr>
</div>
<!-- Manager contribution displayed here or the form to add contribution-->
<% if user_signed_in? && current_user == @card.user && @manager_contribution.nil?  %>
  <%= render "cards/partials/contribution_form"  %>
<% end %>
<!-- rendering list of contributions for the manager or the contributions form for the contributors -->
<% if user_signed_in? && current_user == @card.user %>
  <%= render "cards/partials/show_all" %>
<% else %>
  <%= render "cards/partials/contribution_form" %>
<% end %>